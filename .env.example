DIRECT_URL="postgres://[user]:[password]@[neon-host]/[dbname]?sslmode=require"

# NextAuth
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXTAUTH_SECRET="generate-a-secure-random-string"

# OAuth Providers (opcional)
GOOGLE_CLIENT_ID=""
